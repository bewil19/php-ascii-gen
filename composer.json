{
    "name": "bewil19/php-ascii-gen",
    "description": "An composer php ascii generator.",
    "license": "MIT",
    "authors": [
        {
            "name": "Be Wilson",
            "email": "be.wilson@benjamin-wilson.co.uk"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "phpunit/phpunit": "^11.3"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "AsciiGen\\": "src"
        }
    },
    "suggest": {
        "ext-gmp": "For Permissions and 64 bit calculations on x86 (32 bit) PHP."
    },
    "scripts": {
        "cs": ["./vendor/bin/php-cs-fixer fix"],
        "unit": ["./vendor/bin/phpunit --testdox"]
    }
}